<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de usuario</title>
    <link rel="stylesheet" href="/css/styles.css"/>
    <link href="https://fonts.googleapis.com/css?family=Kaushan+Script" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Kaushan+Script|Neucha" rel="stylesheet">
    <link rel="stylesheet" href="/css/index.css">
  </head>
  <body>
    <div class="loginContainer">
      <div class="loginTitle">Registro</div>
      <div class="fields-Container">
        <input type="email" id="user" placeholder="Usuario..." />
        <input type="text" id="name" placeholder="Nombre completo..." />
        <input type="date" id="date"/>
        <input type="password" id="pass" placeholder="ContraseÃ±a..." />
        <button id="login" class="loginButton">Guardar</button>
        <a href="./" type="button" id="link" class="links">Sign in?</a>
      </div>
    </div>
    <script src="/js/jquery.js"></script>
    <script>
        var nombreUsuario = $('#user')
        var pass = $('#pass')
        var n = $('#name')
        var d = $('#date')
        $('.loginButton').on('click', function(event) {
            if ($(nombreUsuario).val() != "" && $(pass).val() != "" && $(n).val() != "" && $(d).val() != "") {
                $.post('./saveUser',{name: n.val(), user: nombreUsuario.val() , date: d.val(), pass: pass.val()}, function(response) {
                    if (response == "creado") {
                        window.location.href = "http://localhost:3000/events/"
                    }
                })
            } else {
                alert("Complete todos los campos")
            }
        })
    </script>
  </body>
</html>
